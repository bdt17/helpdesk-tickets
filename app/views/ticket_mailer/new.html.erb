<!DOCTYPE html>
<html>
<head>
  <title>Thomas IT Help Desk</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow">
          <div class="card-header bg-primary text-white text-center">
            <h1 class="mb-0">Submit IT Help Desk Ticket</h1>
            <p class="mb-0">thomasinformationtechnology.com</p>
          </div>
          <div class="card-body">
            <%= form_with model: @ticket, class: 'needs-validation', novalidate: true do |f| %>
              <div class="mb-3">
                <%= f.label :title, class: 'form-label fw-bold' %>
                <%= f.text_field :title, class: 'form-control', required: true %>
              </div>
              <div class="mb-3">
                <%= f.label :description, class: 'form-label fw-bold' %>
                <%= f.text_area :description, rows: 6, class: 'form-control', required: true, placeholder: "Describe your IT issue..." %>
              </div>
              <div class="mb-3">
                <%= f.label :email, class: 'form-label fw-bold' %>
                <%= f.email_field :email, class: 'form-control', required: true, placeholder: "your.email@example.com" %>
              </div>
              <%= f.submit "Submit Ticket", class: 'btn btn-primary btn-lg w-100' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
