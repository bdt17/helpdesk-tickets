<h1>Pharma Transport Dashboard</h1>

<table class="table">
  <thead>
    <tr>
      <th>Tracking #</th>
      <th>Status</th>
      <th>Temp Logs</th>
      <th>Route</th>
    </tr>
  </thead>
  <tbody>
    <% @shipments.each do |shipment| %>
      <tr class="<%= 'table-danger' if shipment.temperature_logs&.include?('CRITICAL') %>">
        <td><%= shipment.tracking_number %></td>
        <td><%= shipment.status == 0 ? 'In Transit' : 'Delivered' %></td>
        <td><%= shipment.temperature_logs.truncate(30) %></td>
        <td><%= "#{shipment.pickup_location} â†’ #{shipment.delivery_location}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


