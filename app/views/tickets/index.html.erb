<div class="p-6">
  <h1 class="text-2xl font-bold mb-4">All Tickets</h1>
  <%= link_to 'New Ticket', new_ticket_path, class: 'bg-blue-500 text-white px-4 py-2 rounded mb-4 inline-block' %>
  <% if @tickets.any? %>
    <table class="w-full border-collapse border">
      <thead>
        <tr class="bg-gray-200">
          <th class="border p-2">ID</th>
          <th class="border p-2">Title</th>
          <th class="border p-2">Status</th>
          <th class="border p-2">Created</th>
          <th class="border p-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tickets.each do |ticket| %>
          <tr>
            <td class="border p-2"><%= ticket.id %></td>
            <td class="border p-2"><%= link_to ticket.title, ticket_path(ticket) %></td>
            <td class="border p-2"><%= ticket.status&.humanize || 'Open' %></td>
            <td class="border p-2"><%= time_ago_in_words(ticket.created_at) %> ago</td>
            <td class="border p-2">
              <%= link_to 'Edit', edit_ticket_path(ticket), class: 'bg-yellow-500 text-white px-2 py-1 rounded text-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No tickets yet. <%= link_to 'Create first ticket', new_ticket_path %>.</p>
  <% end %>
</div>
