<!DOCTYPE html>
<html>
<head>
  <title>Thomas IT Help Desk</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light min-vh-100">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand fw-bold fs-3" href="/">
        <i class="fas fa-headset me-2"></i>Thomas IT Help Desk
      </a>
    </div>
  </nav>
  
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-xl-6">
        <div class="card shadow-lg border-0">
          <div class="card-header bg-primary text-white text-center py-4">
            <i class="fas fa-ticket-alt fa-3x mb-3"></i>
            <h1 class="mb-2">Submit IT Support Ticket</h1>
            <p class="lead mb-0">thomasinformationtechnology.com</p>
          </div>
          <div class="card-body p-5">
            <%= form_with model: @ticket, class: 'needs-validation', novalidate: true do |f| %>
              <div class="mb-4">
                <%= f.label :title, 'Ticket Subject', class: 'form-label fw-bold fs-5' %>
                <%= f.text_field :title, class: 'form-control form-control-lg', required: true, placeholder: "e.g. Printer not working" %>
              </div>
              
              <div class="mb-4">
                <%= f.label :description, 'Issue Description', class: 'form-label fw-bold fs-5' %>
                <%= f.text_area :description, rows: 8, class: 'form-control', required: true, 
                       placeholder: "Please describe your IT issue in detail..." %>
              </div>
              
              <div class="mb-5">
                <%= f.label :email, 'Your Email', class: 'form-label fw-bold fs-5' %>
                <%= f.email_field :email, class: 'form-control form-control-lg', required: true, 
                         placeholder: "your.email@company.com" %>
              </div>
              
              <%= f.submit "Submit Ticket", class: 'btn btn-primary btn-lg w-100 py-3 fw-bold fs-5', 
                          style: 'background: linear-gradient(45deg, #007bff, #0056b3)' %>
            <% end %>
          </div>
          <div class="card-footer bg-light text-center py-3">
            <small class="text-muted">
              <i class="fas fa-shield-alt me-1"></i>
              Secure • Fast Response • 24/7 IT Support
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
