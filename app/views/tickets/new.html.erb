<div style="max-width: 600px; margin: 0 auto;">
  <h2 style="text-align: center; color: #2c3e50; margin-bottom: 30px;">➕ New Support Ticket</h2>
  
  <%= form_with(model: @ticket, local: true) do |f| %>
    <div class="form-group" style="margin-bottom: 20px;">
      <%= f.label :title, "Ticket Title", class: "form-label" %>
      <%= f.text_field :title, placeholder: "Firewall connectivity issue", class: "form-control", style: "width: 100%; padding: 12px; border-radius: 8px; border: 2px solid #e9ecef;" %>
    </div>
    
    <div class="form-group" style="margin-bottom: 20px;">
      <%= f.label :description, "Description", class: "form-label" %>
      <%= f.text_area :description, rows: 6, placeholder: "Describe the issue...\n\nCisco ISR 4000 losing WAN connectivity\nFortinet FortiGate blocking legitimate traffic\nUbiquiti UniFi switch port flapping...", class: "form-control", style: "width: 100%; padding: 12px; border-radius: 8px; border: 2px solid #e9ecef;" %>
    </div>
    
    <div style="text-align: center;">
      <%= f.submit "Create Ticket", class: "btn", style: "background: #28a745; color: white; padding: 15px 40px; font-size: 16px; font-weight: 600;" %>
      <%= link_to "← Back to Dashboard", techs_path, class: "btn", style: "background: #6c757d; color: white; padding: 15px 20px; font-size: 16px; font-weight: 600; margin-left: 10px; text-decoration: none;" %>
    </div>
  <% end %>
</div>
