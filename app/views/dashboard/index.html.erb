<div class="container mx-auto p-8">
  <h1 class="text-4xl font-bold mb-8">üñ•Ô∏è Network Operations Dashboard</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-blue-600 text-white p-6 rounded-xl">
      <h3 class="text-3xl font-bold"><%= @total_tickets %></h3>
      <p>Total Tickets</p>
    </div>
    <div class="bg-red-600 text-white p-6 rounded-xl">
      <h3 class="text-3xl font-bold"><%= @critical_tickets %></h3>
      <p>Critical Alerts</p>
    </div>
    <div class="bg-yellow-500 text-white p-6 rounded-xl">
      <h3 class="text-3xl font-bold"><%= @network_tickets %></h3>
      <p>Network Tickets</p>
    </div>
    <div class="bg-green-600 text-white p-6 rounded-xl">
      <h3 class="text-3xl font-bold"><%= @open_tickets %></h3>
      <p>Open Tickets</p>
    </div>
  </div>
  
  <h2 class="text-2xl font-bold mb-4">Recent Network Activity</h2>
  <div class="overflow-x-auto">
    <table class="w-full bg-white border border-gray-200">
      <thead>
        <tr class="bg-gray-100">
          <th class="px-4 py-2">Title</th>
          <th class="px-4 py-2">Status</th>
          <th class="px-4 py-2">Priority</th>
          <th class="px-4 py-2">Created</th>
        </tr>
      </thead>
      <tbody>
        <% @recent_tickets.each do |ticket| %>
          <tr class="border-b">
            <td class="px-4 py-2 font-medium"><%= ticket.title %></td>
            <td class="px-4 py-2">
              <span class="px-2 py-1 rounded-full text-xs 
                <%= ticket.status == 'open' ? 'bg-blue-100 text-blue-800' : 
                    ticket.status == 'in_progress' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
                <%= ticket.status.titleize %>
              </span>
            </td>
            <td class="px-4 py-2">
              <span class="px-2 py-1 rounded-full text-xs 
                <%= ticket.priority == 'critical' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
                <%= ticket.priority.titleize %>
              </span>
            </td>
            <td class="px-4 py-2 text-sm text-gray-600"><%= ticket.created_at.strftime('%b %d') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
