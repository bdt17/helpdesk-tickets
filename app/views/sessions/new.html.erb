<div class="login-container">
  <div class="login-form card p-4 shadow-lg">
    <div class="text-center mb-4">
      <i class="fas fa-headset fa-3x pharma-blue mb-3"></i>
      <h2 class="pharma-blue mb-1">Thomas IT Helpdesk</h2>
      <p class="text-muted mb-0">Agent Login</p>
    </div>
    
    <%= form_with model: @user || User.new, url: new_user_session_path, local: true, class: "text-center" do |f| %>
      <div class="form-group mb-4">
        <%= f.label :email, "Email", class: "form-label fw-bold text-center d-block" %>
        <%= f.email_field :email, class: "form-control form-control-lg text-center mt-2", 
                          placeholder: "agent@thomasit.com", required: true, autocomplete: "email" %>
      </div>
      
      <div class="form-group mb-4">
        <%= f.label :password, "Password", class: "form-label fw-bold text-center d-block" %>
        <%= f.password_field :password, class: "form-control form-control-lg text-center mt-2", 
                             placeholder: "••••••••", required: true, autocomplete: "current-password" %>
      </div>
      
      <%= f.submit "Log In", class: "btn btn-primary btn-lg w-100 py-3 fw-bold" %>
    <% end %>
  </div>
</div>
